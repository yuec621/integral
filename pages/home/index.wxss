/* pages/policy/index.wxss */
.search{
    width: 750rpx;
  }
  .search_arr {
  background-color:#f65a25;
  padding: 20rpx 0 40rpx;
  }
  .search_arr input{
    margin: 0 20rpx;
    height: 76rpx;
    border-radius: 38rpx;
    padding-left: 60rpx;
    background-color: rgba(255, 255, 255, .3);
    opacity: 0.7;
  }
  .bc_text {
    line-height: 68rpx;
    height: 68rpx;
    margin-top: 34rpx;
  }
   
  .sousuo {
    margin-left: 15rpx;
    width: 15%;
    line-height: 150%;
    text-align: center;
    border: 1px solid #d0d0d0;
    border-radius: 10rpx;
  }
  .page_row{
    display: flex;
    flex-direction: row
  }
  .searchcion {
    margin: 20rpx 10rpx 10rpx 10rpx;
    position: absolute;
    left:25rpx;
    z-index: 2;
    width: 20px;
    height: 20px;
    text-align: center;
  }

  /* 头部导航 */
  .nav {
    height: 80rpx;
    width: 100%;
    box-sizing: border-box;
    overflow: hidden;
    line-height: 80rpx;
    background: #f65a25;
    font-size: 16px;
    white-space: nowrap;
    top: 0;
    left: 0;
    z-index: 100;
   }
   .fixed{
     position: fixed;
   }
   .nav-item {
    width:22%;
    display: inline-block;
    text-align: center;
    font-size: 28rpx;
    color: #fff;
    opacity: 0.7;
    position: relative;
   }
   .nav-item.active::after{
     position: absolute;
     content: '';
     width: 100rpx;
     height: 8rpx;
     background-color: rgba(0, 0, 0, .3);
     bottom: 0rpx;
     left: 50%;
     transform: translate(-50%);
   }
   .nav-item.active{
    color: #fff;
    opacity: 1;
   }
   .weui-tab_content {
    text-align: center;
    font-size: 32rpx;
    margin-top: 20rpx;
  }

swiper{
  margin: 0 auto;
  height: 280rpx;
  width: 710rpx;
}
swiper image{
  height: 100%;
  width: 100%;
}
/* 轮播点基本样式 */
swiper .wx-swiper-dot{
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, .3);
}
/* 当前滑块的轮播点样式 */
swiper .wx-swiper-dot-active{
  background-color: #fff;
}
.item-list{
  margin:20rpx;
}
.item-list .item{
  margin: 20rpx auto 0;
  display: flex;
  flex-direction: row-reverse;
  width: 710rpx;
  justify-content: space-between;
  border-bottom: 2rpx solid #eee;
}
.item-list .item:first-child{
  flex-direction: column;
}
.item-list .item:last-child{
  border-bottom: none;
}
.item-list .item .desc{
  width: 60%;
}
.item-list .item .img{
  width: 30%;
  height: 120rpx;
  padding: 10rpx 0;
}
.item-list .item .img image{
  width: 100%;
  height:100%;
}
.item-list .item:first-child .img{
  width: 710rpx;
  margin: 0 auto;
  height: 360rpx;
}
.item-list .item:first-child .img image{
  width: 100%;
  height: 100%;
}
.item-list .item .desc{
  width: 60%;
}

.item-list .item:first-child .desc{
  width: 710rpx;
  margin: 0 auto;
}

.item-list .item .desc .title,
.item-list .item:first-child .desc .title{
  font-size: 28rpx;
  color: #333;
  text-align: left;
  padding: 10rpx 0;
}
.item-list .item .desc .count,
.item-list .item:first-child .desc .count{
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
  padding: 10rpx;
}
.item-list .item .desc .count .share_coll,
.item-list .item:first-child .desc .count .share_coll{
  display: flex;
}
.item-list .item .desc .count .share_coll .share,
.item-list .item:first-child .desc .count .share_coll .share{
  position: relative;
  padding-left: 40rpx;
}
.item-list .item .desc .count .share_coll .share image,
.item-list .item:first-child .desc .count .share_coll .share image{
  width: 32rpx;
  height: 32rpx;
  display: inline-block;
  position: absolute;
  top:0rpx;
  left: 0;
}
.item-list .item .desc .count .share_coll .share view,
.item-list .item:first-child .desc .count .share_coll .share view{
  display: inline-block;
  padding-bottom: 10rpx;
}
.item-list .item .desc .count .share_coll .coll,
.item-list .item:first-child .desc .count .share_coll .coll{
  width: 32rpx;
  height: 32rpx;
  margin-left: 40rpx;
}
.item-list .item .desc .count .share_coll .coll image,
.item-list .item:first-child .desc .count .share_coll .coll image{
  width: 100%;
  height: 100%;
}




