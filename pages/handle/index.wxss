/* pages/handle/index.wxss */
.weui-search-bar {
  position: relative;
  padding: 8px 10px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  background-color: #f65a25;
  width: 750rpx;
}
.weui-icon-search_in-box {
  position: absolute;
  left: 10px;
  top: 7px;
}
.weui-search-bar__form {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
          flex: auto;
  border-radius: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: rgba(255, 255, 255, .2);
}
.weui-search-bar__box {
  /* position: relative; */
  padding-left: 30px;
  padding-right: 30px;
  width: 100%;
  box-sizing: border-box;
  /* z-index: 1; */
}
.weui-search-bar__input {
  height: 28px;
  line-height: 28px;
  font-size: 14px;
}
.weui-search-bar__cancel-btn {
  margin-left: 10px;
  line-height: 28px;
  color: rgba(255, 255, 255, .6);
  white-space: nowrap;
}

.swiper-tab{
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  background-color: #f65a25;
  white-space: nowrap;
}
.swiper-tab-list{  font-size: 30rpx;
  display: inline-block;
  width: 33.33%;
  color: rgba(255, 255, 255, .6);
  position: relative;
}
.swiper-tab-list.on::after{
  content: '';
  position: absolute;
  width: 140rpx;
  height: 6rpx;
  background-color: rgba(0, 0, 0, .2);
  bottom: 0;
  left: 50%;
  transform: translate(-50%);
}
.on{ 
  color: #fff;
}

.swiper-box{ 
  display: block; 
  /* height: 100%; */
  width: 100%; 
  /* overflow: hidden;  */
}
.swiper-box view{
  text-align: center;
}
/* 内容 */
.picker-box{
border-bottom: 2rpx solid #eee;
}
.item-list .item{
  padding: 20rpx 0 20rpx 40rpx;
  box-shadow: 0 0 10rpx #eee;
  border-radius: 10rpx;
  width: 680rpx;
  margin: 40rpx auto 0;
}
.item-list .item .title{
 text-align: left;
 font-size: 30rpx;
 color: #666;
}
.item-list .item .con{
  display: flex;
  justify-content: space-between;
  border-bottom: 2rpx solid #eee;
  padding-bottom: 20rpx;
}
.item-list .item .con .date{
  width: 70%;
  font-size: 24rpx;
  color: #999;
  margin-top: 30rpx;
}
.item-list .item .con .date view{
  text-align: left;
  margin-bottom: 16rpx;
}
.item-list .item .con .date view:nth-child(2){
  padding-left: 60rpx;
}
.item-list .item .con .pic{
  width: 28%;
  height: 200rpx;
}
.item-list .item .con .pic image{
  width: 100%;
  height: 100%;
}
.item-list .icon{
  margin-top: 40rpx;
  margin-bottom: 20rpx;
  display: flex;
}
.item-list .icon .tel,
.item-list .icon .col,
.item-list .icon .nav{
  display: flex;
  margin-right: 40rpx;
}
.item-list .icon .col image,
.item-list .icon .tel image,
.item-list .icon .nav image{
  width: 40rpx;
  height: 40rpx;
}
.item-list .icon .tel view,
.item-list .icon .col view,
.item-list .icon .nav view{
  font-size: 28rpx;
  color: #f65a25;
  margin-left: 18rpx;
}