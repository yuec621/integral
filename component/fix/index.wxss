/* component/fix/index.wxss */
.movable-area{
  pointer-events:none;
  z-index: 100;
  width: 100%;
  height: 100%;
  position: fixed;
  top: 500rpx;
  left: 650rpx;
  right: 0;
  bottom: 0;
}
.movable-view{ 
  pointer-events:auto;
  height: 500rpx;
  width: 100rpx;
  bottom: 0;
  background-color: #fff;
  text-align: center;
  padding: 40rpx 0;
  border-radius: 60rpx;
}
.movable-view .fix{
color: #666666;
font-size: 24rpx;
border-bottom: 2rpx solid #eee;
padding-bottom: 10rpx;
margin:10rpx;
}
.movable-view .fix:last-child{
  border-bottom: 0;
}
.movable-view .fix image{
  width: 40rpx;
  height: 40rpx;
}
